<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:security="http://www.springframework.org/schema/security"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
		http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- Cruds -->
	<bean id="geoPlaceCrudService" lazy-init="true"
		class="com.dereekb.gae.model.crud.services.impl.CrudServiceImpl">
		<constructor-arg index="0" ref="geoPlaceCreateService" />
		<constructor-arg index="1" ref="geoPlaceReadService" />
		<constructor-arg index="2" ref="geoPlaceUpdateService" />
		<constructor-arg index="3" ref="geoPlaceDeleteService" />
	</bean>

	<!-- Services -->
	<bean id="geoPlaceCreateService" lazy-init="true"
		class="com.dereekb.gae.model.crud.services.components.impl.CreateServiceImpl">
		<constructor-arg index="0" ref="geoPlaceCreateTask" />
	</bean>

	<bean id="geoPlaceReadService" lazy-init="true"
		class="com.dereekb.gae.model.crud.services.components.impl.ReadServiceImpl">
		<constructor-arg index="0" ref="geoPlaceReadTask" />
	</bean>

	<bean id="geoPlaceUpdateService" lazy-init="true"
		class="com.dereekb.gae.model.crud.services.components.impl.UpdateServiceImpl">
		<constructor-arg index="0" ref="geoPlaceReadService" />
		<constructor-arg index="1" ref="geoPlaceUpdateTask" />
	</bean>

	<bean id="geoPlaceDeleteService"
		class="com.dereekb.gae.model.crud.services.components.impl.DeleteServiceImpl">
		<constructor-arg index="0" ref="geoPlaceReadService" />
		<constructor-arg index="1" ref="geoPlaceDeleteTask" />
	</bean>

	<!-- Save/Delete Tasks -->
	<bean id="geoPlaceSynchronousSaveTask"
		class="com.dereekb.gae.model.crud.task.save.ConfiguredSetterModelsTask"
		lazy-init="true">
		<constructor-arg index="0"
			ref="geoPlaceSynchronousConfiguredSetter" />
	</bean>

	<bean id="geoPlaceAsyncSaveTask"
		class="com.dereekb.gae.model.crud.task.save.ConfiguredSetterModelsTask"
		lazy-init="true">
		<constructor-arg index="0" ref="geoPlaceAsyncConfiguredSetter" />
	</bean>

	<bean id="geoPlaceSynchronousDeleteTask"
		class="com.dereekb.gae.model.crud.task.save.ConfiguredSetterModelsTask"
		lazy-init="true">
		<constructor-arg index="0"
			ref="geoPlaceSynchronousConfiguredSetter" />
		<constructor-arg index="1" value="DELETE" />
	</bean>

	<bean id="geoPlaceAsyncDeleteTask"
		class="com.dereekb.gae.model.crud.task.save.ConfiguredSetterModelsTask"
		lazy-init="true">
		<constructor-arg index="0" ref="geoPlaceAsyncConfiguredSetter" />
		<constructor-arg index="1" value="DELETE" />
	</bean>

	<!-- Create -->
	<bean id="geoPlaceCreateTask" class="com.dereekb.gae.model.crud.task.impl.CreateTaskImpl"
		lazy-init="true">
		<constructor-arg index="0" ref="geoPlaceCreateTaskDelegate" />
		<constructor-arg index="1" ref="geoPlaceSynchronousSaveTask" />
	</bean>

	<bean id="geoPlaceCreateTaskDelegate"
		class="com.dereekb.gae.model.crud.task.impl.delegate.impl.CreateTaskDelegateImpl"
		lazy-init="true">
		<constructor-arg index="0" ref="geoPlaceFactory" />
		<constructor-arg index="1" ref="geoPlaceAttributeUpdater" />
	</bean>

	<!-- Read -->
	<bean id="geoPlaceReadTask" lazy-init="true"
		class="com.dereekb.gae.model.crud.task.impl.ReadTaskImpl">
		<constructor-arg index="0" ref="geoPlaceRegistry" />
	</bean>

	<!-- Update -->
	<bean id="geoPlaceUpdateTask" class="com.dereekb.gae.model.crud.task.impl.UpdateTaskImpl"
		lazy-init="true">
		<constructor-arg index="0" ref="geoPlaceAttributeUpdater" />
		<constructor-arg index="1" ref="geoPlaceAsyncSaveTask" />
	</bean>

	<bean id="geoPlaceAttributeUpdater"
		class="com.dereekb.gae.model.geo.place.crud.GeoPlaceAttributeUpdater"
		lazy-init="true">
	</bean>

	<!-- Delete -->
	<bean id="geoPlaceDeleteTask" class="com.dereekb.gae.model.crud.task.impl.DeleteTaskImpl"
		lazy-init="true">
		<!-- This implementation simply deletes the elements directly. -->
		<constructor-arg index="0"
			ref="geoPlaceSynchronousConfiguredSetter" />
	</bean>

</beans>