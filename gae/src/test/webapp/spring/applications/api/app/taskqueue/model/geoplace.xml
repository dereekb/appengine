<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:security="http://www.springframework.org/schema/security"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
		http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- CRUDs Controller -->
	<bean id="geoPlaceTaskQueueEditControllerEntry" scope="singleton" lazy-init="true"
		class="com.dereekb.gae.web.taskqueue.controller.crud.impl.TaskQueueEditControllerEntryImpl">
		<constructor-arg index="0" ref="geoPlaceRegistry"/>
		<constructor-arg index="1" ref="geoPlaceTaskQueuePostCreateTask"/>
		<constructor-arg index="2" ref="geoPlaceTaskQueuePostUpdateTask"/>
		<constructor-arg index="3" ref="geoPlaceTaskQueueProcessDeleteTask"/>
	</bean>
	
	<bean id="geoPlaceTaskQueuePostCreateTask" scope="singleton" lazy-init="true"
		class="com.dereekb.gae.web.taskqueue.controller.crud.task.TaskQueueModelTask">
		<constructor-arg index="0">
			<list>
				<ref bean="typedDocumentIndexServiceIndexTask" />
			</list>
		</constructor-arg>
	</bean>
	
	<bean id="geoPlaceTaskQueuePostUpdateTask" scope="singleton" lazy-init="true"
		class="com.dereekb.gae.web.taskqueue.controller.crud.task.TaskQueueModelTask">
		<constructor-arg index="0">
			<list>
				<ref bean="typedDocumentIndexServiceIndexTask" />
			</list>
		</constructor-arg>
	</bean>

	<bean id="geoPlaceTaskQueueProcessDeleteTask" scope="singleton" lazy-init="true"
		class="com.dereekb.gae.web.taskqueue.controller.crud.task.TaskQueueDeleteModelTask">
		<constructor-arg index="0" ref="geoPlaceRegistry" />
		<constructor-arg index="1">
			<list>
				<ref bean="typedDocumentIndexServiceUnindexTask" />
			</list>
		</constructor-arg>
	</bean>

	<!-- Iterate Controller -->
	<bean id="geoPlaceTaskQueueIterateControllerEntry" scope="singleton" lazy-init="true"
		class="com.dereekb.gae.web.taskqueue.controller.extension.iterate.impl.TaskQueueIterateControllerEntryImpl">
		<constructor-arg index="0" ref="geoPlaceRegistry"/>
	</bean>
	
	<bean id="geoPlaceIterateTaskExecutorFactory" scope="singleton" lazy-init="true"
		class="com.dereekb.gae.model.extension.iterate.impl.IterateTaskExecutorFactoryImpl">
		<constructor-arg index="0" ref="geoPlaceRegistry"/>
	</bean>

</beans>