<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:security="http://www.springframework.org/schema/security"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
		http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- Login Service -->
	<bean id="loginTokenSecret" class="java.lang.String" scope="singleton">
		<constructor-arg index="0" value="3zRepP7IfiCCDa7EE5aCradtF94giUGizNr9yb8E/QU=" />
	</bean>
	
	<bean id="loginTokenService" scope="singleton" lazy-init="true"
		class="com.dereekb.gae.server.auth.security.token.model.impl.LoginTokenServiceImpl">
		<constructor-arg index="0" ref="loginTokenSecret"/>
		<constructor-arg index="1" ref="loginTokenBuilder"/>
	</bean>
	
	<bean id="loginTokenBuilder" scope="singleton" lazy-init="true"
		class="com.dereekb.gae.server.auth.security.token.model.impl.LoginTokenBuilderImpl">
		<constructor-arg index="0" ref="loginRegistry"/>
	</bean>

	<alias name="loginTokenService" alias="loginTokenEncoderDecoder"/>
	
	<!-- Login Pointer Service -->
	<bean id="loginPointerService" scope="singleton" lazy-init="true"
		class="com.dereekb.gae.server.auth.security.login.impl.LoginPointerServiceImpl">
		<constructor-arg index="0" ref="loginPointerRegistry"/>
		<constructor-arg index="1" ref="loginPointerScheduleCreateReview"/>
	</bean>
	
	<!-- Password Service -->
	<bean id="passwordLoginService" scope="singleton" lazy-init="true"
		class="com.dereekb.gae.server.auth.security.login.password.impl.PasswordLoginServiceImpl">
		<constructor-arg index="0" ref="passwordEncoder"/>
		<constructor-arg index="1" ref="loginPointerService"/>
		<constructor-arg index="2" ref="loginRegisterService"/>
	</bean>
	
	<bean id="passwordEncoder" scope="singleton" lazy-init="true"
		class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">
	</bean>
	
	<!-- OAuth Services -->
	<bean id="oAuthServiceManager" scope="singleton" lazy-init="true"
		class="com.dereekb.gae.server.auth.security.login.oauth.impl.manager.OAuthServiceManagerImpl">
		<constructor-arg index="0" ref="oAuthLoginService"/>
		<constructor-arg index="1">
			<map key-type="com.dereekb.gae.server.auth.model.pointer.LoginPointerType">
				<entry key="OAUTH_GOOGLE" value-ref="googleOAuthService" />
			</map>
		</constructor-arg>
	</bean>

	<bean id="oAuthLoginService" scope="singleton" lazy-init="true"
		class="com.dereekb.gae.server.auth.security.login.oauth.impl.service.OAuthLoginServiceImpl">
		<constructor-arg index="0" ref="loginPointerService"/>
	</bean>
	
	<bean id="googleOAuthClientId" class="java.lang.String" scope="singleton">
		<constructor-arg index="0" value="326101736804-mgrnl6qnirj54j3q5cer8ci6lf6i1e8c.apps.googleusercontent.com" />
	</bean>
	
	<bean id="googleOAuthClientSecret" class="java.lang.String" scope="singleton">
		<constructor-arg index="0" value="hUG1RNQXv6f9qfiSesB0vbJz" />
	</bean>
	
	<bean id="googleOAuthService" scope="singleton"
		lazy-init="true"
		class="com.dereekb.gae.server.auth.security.login.oauth.impl.service.GoogleOAuthService">
		<constructor-arg index="0" ref="googleOAuthClientId"/>
		<constructor-arg index="1" ref="googleOAuthClientSecret"/>
		<property name="loginTokenRedirectUrl" value="https://developers.google.com/oauthplayground" />
		<property name="authTokenRedirectUrl" value="https://developers.google.com/oauthplayground" />
	</bean>

	<!-- Register Service -->
	<bean id="loginRegisterService" scope="singleton" lazy-init="true"
		class="com.dereekb.gae.server.auth.security.login.impl.LoginRegisterServiceImpl">
		<constructor-arg index="0" ref="newLoginGenerator"/>
		<constructor-arg index="1" ref="linkService"/>
	</bean>

	<bean id="newLoginGenerator" scope="singleton" lazy-init="true"
		class="com.dereekb.gae.server.auth.security.login.impl.NewLoginGeneratorImpl">
		<constructor-arg index="0" ref="loginRegistry"/>
		<constructor-arg index="1" ref="loginScheduleCreateReview"/>
	</bean>

</beans>