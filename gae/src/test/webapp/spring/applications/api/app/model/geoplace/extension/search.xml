<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:security="http://www.springframework.org/schema/security"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
		http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="geoPlaceSearchIndex" class="java.lang.String" lazy-init="true" scope="singleton">
		<constructor-arg index="0" ref="geoPlaceType" />
	</bean>
	
	<!-- Index -->
	<bean id="geoPlaceKeyedDocumentIndexService"
		class="com.dereekb.gae.model.extension.search.document.index.service.impl.KeyedDocumentIndexServiceImpl"
		scope="singleton" lazy-init="true">
		<constructor-arg index="0" ref="geoPlaceReadService"/>
		<constructor-arg index="1" ref="geoPlaceDocumentIndexService"/>
	</bean>
	
	<bean id="geoPlaceDocumentIndexService"
		class="com.dereekb.gae.model.extension.search.document.index.service.impl.DocumentIndexServiceImpl"
		scope="singleton" lazy-init="true">
		<constructor-arg index="0" ref="searchSystem"/>
		<constructor-arg index="1" ref="geoPlaceIndexingDocumentBuilder"/>
	</bean>

	<!-- Search Indexing -->
	<bean id="geoPlaceIndexingDocumentBuilder"
		class="com.dereekb.gae.model.extension.search.document.index.component.impl.IndexingDocumentBuilderImpl"
		scope="singleton" lazy-init="true">
		<constructor-arg index="0" ref="geoPlaceSearchIndex"/>
		<constructor-arg index="1" ref="geoPlaceSearchDocumentBuilder"/>
	</bean>

	<bean id="geoPlaceSearchDocumentBuilder"
		class="com.dereekb.gae.model.extension.search.document.index.component.builder.staged.StagedDocumentBuilder"
		scope="singleton" lazy-init="true">
		<constructor-arg index="0">
			<bean
				class="com.dereekb.gae.model.extension.search.document.index.component.builder.staged.initializer.impl.ModelStagedDocumentBuilderInitializer"
				scope="singleton">
				<constructor-arg index="0" ref="geoPlaceType"/>
			</bean>
		</constructor-arg>
		<constructor-arg index="1">
			<list>
				<bean
					class="com.dereekb.gae.model.geo.place.search.document.index.GeoPlaceDocumentBuilderStep">
				</bean>
			</list>
		</constructor-arg>
	</bean>
	
	<!-- Derivative Indexing -->
	<bean id="geoPlaceDerivativeDocumentBuilderStep"
		class="com.dereekb.gae.model.extension.search.document.index.component.builder.staged.step.model.impl.ModelStagedDocumentBuilderStepImpl"
		scope="singleton" lazy-init="true">
		<constructor-arg index="0" ref="geoPlaceRegistry"/>
		<constructor-arg index="1">
			<bean class="com.dereekb.gae.model.geo.place.search.document.index.GeoPlaceDerivativeDocumentBuilderStep"/>
		</constructor-arg>
	</bean>
	
	<!-- Search Services -->
	<bean id="geoPlaceSearchService"
		class="com.dereekb.gae.model.extension.search.document.search.service.model.impl.ModelDocumentSearchServiceImpl"
		scope="singleton" lazy-init="true">
		<constructor-arg index="0" ref="geoPlaceReadService"/>
		<constructor-arg index="1" ref="modelDocumentSearchService"/>
		<constructor-arg index="2">
			<bean class="com.dereekb.gae.model.geo.place.search.document.query.GeoPlaceSearchRequestConverter">
				<constructor-arg index="0" ref="geoPlaceSearchIndex"/>
			</bean>
		</constructor-arg>
		<constructor-arg index="3" ref="scoredDocumentLongKeyReader"/>	
	</bean>
	
	<!-- Query Services -->
	<bean id="geoPlaceQueryService"
		class="com.dereekb.gae.model.extension.search.query.search.service.impl.ModelQueryServiceImpl"
		scope="singleton" lazy-init="true">
		<constructor-arg index="0" ref="geoPlaceRegistry"/>
		<constructor-arg index="1" ref="geoPlaceQueryInitializer"/>
	</bean>

	<bean id="geoPlaceQueryInitializer"
		class="com.dereekb.gae.model.geo.place.search.query.GeoPlaceQueryInitializer"
		scope="singleton" lazy-init="true">
	</bean>

</beans>