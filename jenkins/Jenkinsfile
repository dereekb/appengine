pipeline {
    agent none
    environment {
        ARTIFACTORY_CREDS = credentials('jenkins-artifactory')
        ARTIFACTORY_CONTEXT_URL = "https://dev.dereekb.com:10000/artifactory"
        NPM_TOKEN = credentials('jenkins-verdaccio')
        VERDACCIO_LOGIN = credentials('jenkins-verdaccio-login')
        NPM_REGISTRY_URL = "https://dev.dereekb.com:10000/verdaccio"
        NPM_EMAIL_ADDRESS = "jenkins@dereekb.com"
    }
    stages {
        stage('Build') {
            failFast false
            parallel {
                stage('Server') {
                    agent {
                        dockerfile {
                            filename 'Dockerfile'
                            dir 'jenkins/maven'
                            args '-v $HOME/.m2:/root/.m2'
                            reuseNode true
                        }
                    }
                    stages {
                        stage('Initialize') {
                            steps {
                                sh './jenkins/scripts/appengine/initialize.sh'
                            }
                        }
                        stage('Build') {
                            steps {
                                sh './jenkins/scripts/appengine/build.sh'
                            }
                        }
                        stage('Test') {
                            steps {
                                sh './jenkins/scripts/appengine/test.sh'
                            }
                            post {
                                always {
                                    junit 'appengine/target/surefire-reports/*.xml'
                                }
                            }
                        }
                        stage('Deploy') {
                            steps {
                                sh './jenkins/scripts/appengine/deploy.sh'
                            }
                        }
                    }
                }
                stage('Web') {
                    agent {
                        dockerfile {
                            filename 'Dockerfile'
                            dir 'jenkins/node'
                            additionalBuildArgs '--build-arg NPM_TOKEN=${NPM_TOKEN} --build-arg NPM_REGISTRY_URL=${NPM_REGISTRY_URL}'
                            reuseNode true
                        }
                    }
                    stages {
                        stage('Initialize') {
                            steps {
                                sh './jenkins/scripts/appengine-web/initialize.sh'
                            }
                        }
                        stage('Build') {
                            steps {
                                sh './jenkins/scripts/appengine-web/build.sh'
                            }
                        }
                        stage('Test') {
                            steps {
                                sh './jenkins/scripts/appengine-web/test.sh'
                            }
                            post {
                                always {
                                    junit 'appengine-web/tests/**/*.xml'
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
