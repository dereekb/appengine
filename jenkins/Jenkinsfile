pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
        }
    }
    environment {
        ARTIFACTORY_CREDS = credentials('jenkins-artifactory')
        ARTIFACTORY_CONTEXT_URL = "https://dev.dereekb.com:10000/artifactory"
    }
    stages {
        stage('Initialize') {
            steps {
                sh './jenkins/scripts/initialize.sh'
            }
        }
        stage('Testing') {
            failFast false
            parallel {
                stage('Appengine') {
                    stages {
                        stage('Build') {
                            steps {
                                sh './jenkins/appengine/scripts/build.sh'
                            }
                        }
                        stage('Test') {
                            steps {
                                sh './jenkins/appengine/scripts/test.sh'
                            }
                            post {
                                always {
                                    junit 'appengine/target/surefire-reports/*.xml'
                                }
                            }
                        }
                    }
                }
            }
        }
        stage('E2E') {
            steps {
                sh 'echo Testing E2E...'
            }
        }
        stage('Deploy') {
            failFast false
            parallel {
                stage('Appengine') {
                    steps {
                        sh './jenkins/appengine/scripts/deploy.sh'
                    }
                }
            }
        }
    }
}