<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE appengine>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">

	<application>gae-test-server</application>
	<version>v1</version>
	<module>default</module>
	
	<runtime>java8</runtime>

	<vm>false</vm>
	<instance-class>F1</instance-class>

	<automatic-scaling>
		<min-idle-instances>0</min-idle-instances>
		<max-idle-instances>automatic</max-idle-instances>
		<max-concurrent-requests>100</max-concurrent-requests>
	</automatic-scaling>

	<public-root>/static</public-root>

	<static-files>
  		<include path="/**.html" expiration="12h" />
  		<include path="/**.ico" expiration="1d" />
  		<include path="/**.png" expiration="1d" />
  		<!-- Assets with generated bundles/names. -->
  		<include path="/**.css" expiration="30d" />
  		<include path="/**.js" expiration="30d" />
  		<include path="/**.eot" expiration="30d" />
  		<include path="/**.svg" expiration="30d" />
  		<include path="/**.woff2" expiration="30d" />
  		<include path="/**.ttf" expiration="30d" />
  		<include path="/**.woff" expiration="30d" />
  		<!-- Everything else is 1 day. -->
  		<include path="/**.*" expiration="1d" />
  	</static-files>

	<threadsafe>true</threadsafe>

	<ssl-enabled>true</ssl-enabled>

</appengine-web-app>
