<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>Google App Engine Test Server Default</display-name>
	
	<!-- Redirect Filter -->
	<filter>
	    <filter-name>redirect</filter-name>
	    <filter-class>com.dereekb.gae.server.web.GaeTestServerRedirectToNakedDomainFilter</filter-class>
	</filter>
	<filter-mapping>
	    <filter-name>redirect</filter-name>
	    <url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- Angular Filter -->
	<filter>
	    <filter-name>angular</filter-name>
	    <filter-class>com.dereekb.gae.web.index.AngularHtml5Filter</filter-class>
	</filter>
	<filter-mapping>
	    <filter-name>angular</filter-name>
	    <url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Require all routes to be secure with HTTPS -->
	<security-constraint>
        <web-resource-collection>
            <web-resource-name>all</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
</web-app>